datasource db {
    provider = "sqlite"
    url      = "file:./database.db"
}

generator client {
    provider = "prisma-client-py"
    output   = "./generated/client"
}

model Post {
    id      Int      @id @default(autoincrement())
    title   String
    content String?
    answers Answer[]
}

model Answer {
    id         Int      @id @default(autoincrement())
    content    String
    postId     Int
    post       Post @relation(fields: [postId], references: [id])
}